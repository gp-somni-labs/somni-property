---
apiVersion: v1
kind: Namespace
metadata:
  name: {{ namespace }}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: homepage-config
  namespace: {{ namespace }}
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  storageClassName: {{ storage_class | default('local-path') }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: homepage
  namespace: {{ namespace }}
  labels:
    app: homepage
    managed-by: somniproperty
    client-id: "{{ client_id }}"
spec:
  replicas: 1
  selector:
    matchLabels:
      app: homepage
  template:
    metadata:
      labels:
        app: homepage
    spec:
      containers:
      - name: homepage
        image: ghcr.io/gethomepage/homepage:latest
        ports:
        - containerPort: 3000
          name: http
        volumeMounts:
        - name: config
          mountPath: /app/config
        resources:
          requests:
            cpu: {{ cpu_request | default('50m') }}
            memory: {{ memory_request | default('128Mi') }}
          limits:
            cpu: {{ cpu_limit | default('200m') }}
            memory: {{ memory_limit | default('256Mi') }}
      volumes:
      - name: config
        persistentVolumeClaim:
          claimName: homepage-config
---
apiVersion: v1
kind: Service
metadata:
  name: homepage
  namespace: {{ namespace }}
spec:
  selector:
    app: homepage
  ports:
  - name: http
    port: 3000
    targetPort: 3000
{% if ingress_enabled %}
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: homepage
  namespace: {{ namespace }}
  annotations:
    {% for key, value in ingress_annotations.items() %}
    {{ key }}: "{{ value }}"
    {% endfor %}
spec:
  rules:
  - host: {{ ingress_hostname | default('home.' + client_domain) }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: homepage
            port:
              number: 3000
{% endif %}
