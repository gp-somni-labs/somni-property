---
apiVersion: v1
kind: Namespace
metadata:
  name: {{ namespace }}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: node-red-data
  namespace: {{ namespace }}
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 5Gi
  storageClassName: {{ storage_class | default('local-path') }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: node-red
  namespace: {{ namespace }}
  labels:
    app: node-red
    managed-by: somniproperty
    client-id: "{{ client_id }}"
spec:
  replicas: 1
  selector:
    matchLabels:
      app: node-red
  template:
    metadata:
      labels:
        app: node-red
    spec:
      containers:
      - name: node-red
        image: nodered/node-red:latest
        ports:
        - containerPort: 1880
          name: http
        env:
        - name: TZ
          value: "{{ timezone | default('America/New_York') }}"
        volumeMounts:
        - name: data
          mountPath: /data
        resources:
          requests:
            cpu: {{ cpu_request | default('100m') }}
            memory: {{ memory_request | default('256Mi') }}
          limits:
            cpu: {{ cpu_limit | default('500m') }}
            memory: {{ memory_limit | default('512Mi') }}
      volumes:
      - name: data
        persistentVolumeClaim:
          claimName: node-red-data
---
apiVersion: v1
kind: Service
metadata:
  name: node-red
  namespace: {{ namespace }}
spec:
  selector:
    app: node-red
  ports:
  - name: http
    port: 1880
    targetPort: 1880
{% if ingress_enabled %}
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: node-red
  namespace: {{ namespace }}
  annotations:
    {% for key, value in ingress_annotations.items() %}
    {{ key }}: "{{ value }}"
    {% endfor %}
spec:
  rules:
  - host: {{ ingress_hostname | default('node-red.' + client_domain) }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: node-red
            port:
              number: 1880
{% endif %}
